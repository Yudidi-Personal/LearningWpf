<Window x:Class="_2WpfLayout.StackPanelLayout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2WpfLayout"
        mc:Ignorable="d"
        Title="StackPanel" Height="300" Width="300">
    <Grid>
        <StackPanel Name="stackPnl" Orientation="Vertical">
            <Button Content="1"></Button>
            <Button Content="2"></Button>
            <Button Content="3"></Button>
            <Button Content="Add Button By Code" Click="AddButtons"></Button>
            <Button Content="Change Arrangement" Click="ButtonClick"></Button>
        </StackPanel>
    </Grid>
</Window>
