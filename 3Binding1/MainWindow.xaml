<Window x:Class="_3Binding1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3Binding1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid >
        <TextBox Name="txt1" Text="Txt1" Height="20" Width="200"></TextBox>
        <TextBlock Name="txt2" Text="{Binding Path=Text, ElementName=txt1}" Height="20" Width="200" ></TextBlock>
    </Grid>
</Window>
